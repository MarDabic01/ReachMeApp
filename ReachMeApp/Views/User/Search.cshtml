@model List<DomainLayer.Model.User>
@using DomainLayer.Dto
@{
    ViewData["Title"] = "Search";
}

@Html.Partial("NavigationBar", new NavigationDto())

<div class="d-flex flex-column align-items-center">
    <h1>Your searching results</h1><br />
</div>

<div class="d-flex justify-content-center w-100">
    <div class="card-columns">
        @foreach (var result in Model)
        {
            <div class="card">
                <div class="card-img text-center">
                    @if (result.ProfilePic == null)
                    {
                        <img src="~/images/defaultProfilePicture.jpeg" style="width:100%; height:100%; object-fit:cover;" class="rounded-circle"/>
                    }
                    else
                    {
                        <img src="data:image/jpg;base64,@result.ProfilePic" style="width: 100%; height: 100%; object-fit: cover;" class="rounded-circle"/>
                    }
                </div>
                <div class="card-body text-center">
                    <a asp-controller="User" asp-action="Index" asp-route-username="@result.Username">@result.Username</a>
                </div>
            </div>
        }
    </div>
</div>
