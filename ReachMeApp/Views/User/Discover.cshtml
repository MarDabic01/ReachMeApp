@model List<DomainLayer.Model.User>
@using DomainLayer.Dto
@using ReachMeApp.Components

@{
    ViewData["Title"] = "Discover";
}

@Html.Partial("NavigationBar", new NavigationDto())

<div class="d-flex flex-column align-items-center">
    <h1>Suggested for you</h1><br />
</div>

@if (Model.Count > 0)
{
    @(await Html.RenderComponentAsync<ShowUsers>(RenderMode.ServerPrerendered, new { Users = Model}))
}
else
{
    <div class="text-center">
        <h1 class="display-4">You don't have any suggestions yet</h1>
    </div>
}

<script src="_framework/blazor.server.js"></script>
