@model DomainLayer.Dto.ForgotPasswordDto
@using ReachMeApp.Components

@{
    ViewData["Title"] = "Forgot Password";
}

@(await Html.RenderComponentAsync<HomeBar>(RenderMode.ServerPrerendered))
<script src="_framework/blazor.server.js"></script>

<link rel="stylesheet" href="~/css/HomeCSS.css" />

<div class="d-flex flex-column align-items-center">
    <h1>Forgot your password?</h1><br />
    <h3>Do not worry, we got you</h3>
</div>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Insert your e-mail"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="SEND EMAIL" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
