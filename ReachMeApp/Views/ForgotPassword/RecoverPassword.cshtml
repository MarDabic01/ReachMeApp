@model DomainLayer.Dto.RecoverPasswordDto
@using ReachMeApp.Components

@{
    ViewData["Title"] = "RecoverPassword";
}

@(await Html.RenderComponentAsync<HomeBar>(RenderMode.ServerPrerendered))
<script src="_framework/blazor.server.js"></script>

<link rel="stylesheet" href="~/css/HomeCSS.css" />

<div class="d-flex flex-column align-items-center">
    <h1>Please reset your password</h1><br />
</div>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="RecoverPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RepeatPassword" class="form-control" placeholder="Repeat password"/>
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="SAVE PASSWORD" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
