@model DomainLayer.Dto.LoginDto
@using ReachMeApp.Components 

@{
    ViewData["Title"] = "Login";
}

@(await Html.RenderComponentAsync<HomeBar>(RenderMode.ServerPrerendered))
<script src="_framework/blazor.server.js"></script>

<link rel="stylesheet" href="~/css/HomeCSS.css" />

<div class="d-flex flex-column align-items-center">
    <h1>Already have an account?</h1><br />
    <h3>Log in now</h3>
</div>

<hr />

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login">
            @if (TempData.ContainsKey("InvalidLogin") == true)
            {
                <span class="text-danger">@TempData["InvalidLogin"]</span>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <a asp-controller="ForgotPassword" asp-action="Index">Forgot password?</a>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="LOG IN" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
